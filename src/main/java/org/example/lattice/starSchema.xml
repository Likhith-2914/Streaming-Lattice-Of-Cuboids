<?xml version="1.0"?>
<starSchema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="schema.xsd">
    <databaseName>market_db</databaseName>
    <dimension>
        <name>dim_cust</name>
        <ID>
            <name>cust_id</name>
            <type>varchar(30)</type>
            <lattice>false</lattice>
        </ID>
        <property>
            <name>customer_name</name>
            <type>varchar(30)</type>
            <lattice>false</lattice>
        </property>
        <property>
            <name>city</name>
            <type>varchar(30)</type>
            <lattice>true</lattice>
        </property>
        <property>
            <name>state</name>
            <type>varchar(30)</type>
            <lattice>true</lattice>
        </property>
        <property>
            <name>customer_segment</name>
            <type>varchar(30)</type>
            <lattice>false</lattice>
        </property>
    </dimension>

    <dimension>
        <name>dim_order</name>
        <ID>
            <name>ord_id</name>
            <type>varchar(30)</type>
            <lattice>false</lattice>
        </ID>
        <property>
            <name>order_date</name>
            <type>datetime</type>
            <lattice>false</lattice>
        </property>
        <property>
            <name>order_priority</name>
            <type>varchar(30)</type>
            <lattice>false</lattice>
        </property>
    </dimension>

    <dimension>
        <name>dim_shipping</name>
        <ID>
            <name>ship_id</name>
            <type>varchar(30)</type>
            <lattice>false</lattice>
        </ID>
        <property>
            <name>ship_mode</name>
            <type>varchar(30)</type>
            <lattice>true</lattice>
        </property>
        <property>
            <name>ship_date</name>
            <type>datetime</type>
            <lattice>false</lattice>
        </property>
    </dimension>

    <dimension>
        <name>dim_prod</name>
        <ID>
            <name>prod_id</name>
            <type>varchar(30)</type>
            <lattice>false</lattice>
        </ID>
        <property>
            <name>product_category</name>
            <type>varchar(30)</type>
            <lattice>true</lattice>
        </property>
        <property>
            <name>product_sub_category</name>
            <type>varchar(30)</type>
            <lattice>true</lattice>
        </property>
    </dimension>

    <fact>
        <name>sales</name>
        <aggregate_functions>
            <aggregate_function>sum</aggregate_function>
        </aggregate_functions>
    </fact>
    <fact>
        <name>profit</name>
        <aggregate_functions>
            <aggregate_function>max</aggregate_function>
        </aggregate_functions>
    </fact>
</starSchema>
